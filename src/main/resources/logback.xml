<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSSZ} %-5level [${PID:- }  %logger{36}]  %m%n" />
    <property name="APP_LOG_ROOT" value="../logs"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

<!--    <root level="INFO">-->
<!--        <appender-ref ref="console" />-->
<!--    </root>-->

    <logger name="com.rscarberry.sbcollectstatsaspect.controller" level="DEBUG">
        <appender-ref ref="console" />
    </logger>

</configuration>
